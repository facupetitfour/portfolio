---

<Layout>
  <main class="mx-auto flex flex-col items-center justify-center space-y-6 md:w-2/3">
    <SectionContainer idSection="about" className="space-y-6 md:space-y-8 lg:pt-20 lg:pb-10">
      <AboutMe />
    </SectionContainer>
    <SectionContainer idSection="skills" className="space-y-6 md:space-y-8 lg:py-10">
      <Skills />
    </SectionContainer>
    <SectionContainer idSection="experience" className="space-y-6 md:space-y-8 lg:py-10">
      <Experiences />
    </SectionContainer>
    <!-- <SectionContainer idSection="skils" className="space-y-6 md:space-y-8 lg:py-30" /> -->
  </main>
</Layout>

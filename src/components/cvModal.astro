---
// import "./CVModal.css"; // opcional, podÃ©s borrar si usÃ¡s el <style> de abajo
import IconCv from "../icons/IconCv.astro";
---

<button
	id="openCVBtn"
	class="bg-teal-100/25 border-1 text-black dark:text-black border-teal-200 font-medium dark:bg-blue-300 dark:border-blue-400 rounded-full flex justify-center items-center gap-x-2 py-2 px-4 hover:scale-110 transition"
>
	<IconCv class="h-7 w-7" />Ver mi CV</button
>

<div id="cvModal" class="cv-modal">
	<div class="cv-modal-content bg-neutral-800">
		<span id="closeCVBtn" class="cv-close">&times;</span>
		<iframe
			src="/CV-Facundo_Petitfour.pdf"
			width="100%"
			height="600px"
			title="Vista previa del CV"></iframe>
		<a
			href="/cv.pdf"
			download="Facu_Petitfour_CV.pdf"
			class="cv-download bg-teal-400 dark:bg-blue-400 text-white px-6 py-3 rounded-full hover:bg-teal-500 dark:hover:bg-blue-500"
		>
			Descargar PDF
		</a>
	</div>
</div>

<!-- ðŸŸ¢ Este script se ejecuta en el navegador, despuÃ©s del HTML -->
<script is:inline>
	const modal = document.getElementById("cvModal");
	const openBtn = document.getElementById("openCVBtn");
	const closeBtn = document.getElementById("closeCVBtn");

	openBtn?.addEventListener("click", () => {
		if (modal) {
			modal.classList.add("show");
			document.body.style.overflow = "hidden"; // ðŸ”’ bloquea scroll
		}
	});

	closeBtn?.addEventListener("click", () => {
		if (modal) {
			modal.classList.remove("show");
			document.body.style.overflow = ""; // ðŸ”“ restaura scroll
		}
	});

	window.addEventListener("click", (e) => {
		if (e.target === modal) {
			modal.classList.remove("show");
			document.body.style.overflow = "";
		}
	});
</script>

<style>
	.cv-btn {
		color: white;
		border: none;
		padding: 0.75rem 1.25rem;
		border-radius: 0.5rem;
		cursor: pointer;
	}

	/* ðŸŸ¢ Modal base (oculto por defecto) */
	.cv-modal {
		display: none;
		position: fixed; /* âœ… bloquea scroll */
		z-index: 999;
		inset: 0; /* equivale a top:0, left:0, right:0, bottom:0 */
		background-color: rgba(0, 0, 0, 0.6);
		justify-content: center;
		align-items: center;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	/* ðŸŸ£ Cuando se muestra el modal */
	.cv-modal.show {
		display: flex;
		opacity: 1;
	}

	.cv-modal-content {
		margin: auto;
		padding: 20px;
		border-radius: 1rem;
		width: 80%;
		max-width: 800px;
		background-color: #1f1f1f;
		box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
		animation: scaleIn 0.3s ease;
	}

	.cv-close {
		float: right;
		font-size: 1.5rem;
		cursor: pointer;
		color: white;
	}

	.cv-download {
		display: inline-block;
		margin-top: 1rem;
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		text-decoration: none;
	}

	@keyframes scaleIn {
		from {
			transform: scale(0.9);
			opacity: 0;
		}
		to {
			transform: scale(1);
			opacity: 1;
		}
	}
</style>

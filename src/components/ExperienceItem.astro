---
const { title, company, period, description } = Astro.props
---

<section class="mb-6 ml-4 space-y-4">
  <div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >{period}</time
  >
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
    <span class="text-teal-500 dark:text-blue-400">{title} </span><span
      class="text-gray-400 dark:text-gray-500 font-normal">@ {company}</span
    >
  </h3>
  <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400 text-pretty">
    {description}
  </p>
</section>

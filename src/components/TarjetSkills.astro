---
const { arraySkils, nameTarjet } = Astro.props
---

<div
  class="rounded-2xl border border-gray-200/20 bg-gray-200/10 p-8 transition-all duration-300 dark:border-gray-700/30 dark:bg-gray-800/30"
>
  <div class="mb-6 flex items-center gap-4">
    <h3 class="text-2xl font-semibold">{nameTarjet}</h3>
  </div>
  <div class="space-y-4">
    <div class="flex flex-wrap gap-2">
      {
        arraySkils.map(skill => (
          <span class="rounded-full bg-teal-100 px-3 py-1 text-sm font-medium text-teal-800 dark:bg-blue-900/30 dark:text-blue-300">
            {skill}
          </span>
        ))
      }
    </div>
  </div>
</div>

---
import ThemeButton from "./ThemeButton.astro";
---

<header
	class="flex md:sticky md:top-4 justify-between bg-teal-200/20 dark:bg-black/10 md:w-2/3 w-80 items-center rounded-3xl p-3 md:mt-8 mt-4 backdrop-blur-sm mx-auto z-50"
>
	<!-- Nombre -->
	<div class="text-lg font-semibold">Facundo Petitfour</div>
	<!-- ThemeButton solo visible en mobile -->

	<!-- Navegación desktop -->
	<div class="gap-10 items-center md:flex">
		<a
			href="/about"
			class="dark:hover:text-blue-500 hover:text-teal-500 transition md:flex hidden"
			>Sobre mí</a
		>
		<a
			href="/projects"
			class="dark:hover:text-blue-500 hover:text-teal-500 transition md:flex hidden"
			>Proyectos</a
		>
		<a
			href="/contact"
			class="dark:hover:text-blue-500 hover:text-teal-500 transition md:flex hidden"
			>Contacto</a
		>
		<ThemeButton />
	</div>
</header>

<!-- Menú móvil (si querés usarlo después) -->
<nav
	id="mobile-menu"
	class="hidden flex-col items-center gap-4 mt-3 bg-white/20 dark:bg-black/80 rounded-2xl shadow-lg p-5 w-80 mx-auto md:hidden backdrop-blur-md transition-all duration-300"
>
	<a href="/about" class="block rounded-md px-3 py-2 text-base">Sobre mí</a>
	<a href="/projects" class="block rounded-md px-3 py-2 text-base">Proyectos</a>
	<a href="/contact" class="block rounded-md px-3 py-2 text-base">Contacto</a>
</nav>
